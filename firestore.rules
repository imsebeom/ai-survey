rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // 설문 컬렉션 - 모든 사용자가 읽기/쓰기 가능
    match /surveys/{surveyId} {
      allow read: if true;
      allow write: if true;
    }
    // 응답 컬렉션 - 모든 사용자가 읽기/쓰기 가능
    match /responses/{responseId} {
      allow read: if true;
      allow write: if true;
    }
  }
}
